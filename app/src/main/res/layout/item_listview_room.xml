<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/basic_item_listview_layout_margin"
    android:layout_marginStart="@dimen/basic_item_listview_layout_margin"
    android:layout_marginEnd="@dimen/basic_item_listview_layout_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SG-902"
            android:padding="5dp"
            android:layout_weight="0.3"
            />


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#D8D8D8"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="789-456-123"
            android:padding="5dp"
            android:gravity="end|center_vertical"
            android:layout_weight="0.6"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>